<!-- head area include -->
<%- include('../layouts/frontend/head.ejs',{title:'contact'}) %>

    <!-- navbar area include -->
    <%- include('../layouts/frontend/navbar.ejs') %>

        <div class="contact_page">
            <div class="container">
                <div class="contact_page_content">

                    <!-- content_title start -->
                    <div class="content_title_and_description" data-aos="fade-right" data-aos-duration="1000">
                        <h2 class="title_text">যোগাযোগ</h2>
                        <p class="description_text">নাজাত লাভ, জান্নাত অর্জন, খোদার সন্তুষ্টি এবং ধনসম্পদেও
                            বরকতের
                            মাধ্যম।
                            সততা মানব চরিত্রের শ্রেষ্ঠ গুণ। </p>
                    </div>
                    <!-- content_title end -->

                    <!-- content_left_and_right_area start -->
                    <div class="content_left_and_right_area">
                        <div class="row">
                            <!-- contact_area_left start -->
                            <div class="col-md-6">
                                <div class="contact_area_left" data-aos="fade-right" data-aos-duration="1000">

                                    <!-- address_area start -->
                                    <div class="address_area content_area">
                                        <div class="content_area_icon_and_title">
                                            <div class="content_area_icon">
                                                <i class="fa-solid fa-location-dot"></i>
                                            </div>
                                            <div class="content_area_title">
                                                <h3 class="text">ঠিকানা</h3>
                                            </div>
                                        </div>

                                        <div class="content_text">
                                            <p class="text">
                                                <%= address[4].value[0] %>
                                            </p>
                                        </div>
                                    </div>
                                    <!-- address_area end-->

                                    <!-- contact_area start -->
                                    <div class="contact_area content_area">
                                        <div class="content_area_icon_and_title">
                                            <div class="content_area_icon">
                                                <i class="fa-solid fa-phone"></i>
                                            </div>
                                            <div class="content_area_title">
                                                <h3 class="text">যোগাযোগের নাম্বার</h3>
                                            </div>
                                        </div>

                                        <div class="content_text phone_text">
                                            <% contact_numbers.map( (cn)=>{ %>


                                                <a href="tel:+88<%= cn.number   %>" class="text phone_number">
                                                    <%= cn.number %>
                                                </a>


                                                <% })%>
                                        </div>
                                    </div>
                                    <!--contact_area end-->

                                    <!-- email_area start -->
                                    <div class="email_area content_area">
                                        <div class="content_area_icon_and_title">
                                            <div class="content_area_icon">
                                                <i class="fa-regular fa-paper-plane"></i>
                                            </div>
                                            <div class="content_area_title">
                                                <h3 class="text">ইমেল</h3>
                                            </div>
                                        </div>

                                        <div class="content_text">
                                            <% emails.map( (email)=>{ %>
                                                <a href="mailto:<%= email.email   %>"
                                                    class="text phone_number email_text">
                                                    <%= email.email %>
                                                </a>
                                            <% })%>

                                        </div>
                                    </div>
                                    <!-- email_area end-->

                                    <!-- social_media_area start -->
                                    <div class="social_media_area content_area">
                                        <div class="content_area_icon_and_title">
                                            <div class="content_area_icon">
                                                <i class="fa-solid fa-globe"></i>
                                            </div>
                                            <div class="content_area_title">
                                                <h3 class="text">Social Link</h3>
                                            </div>
                                        </div>

                                        <div class="content_text">
                                            <ul>
                                                <% social_links.map( (slink)=>{ %>
                                                    <li>
                                                        <a href="<%= slink.url %>">
                                                            <i class="<%= slink.icon %>"></i>
                                                        </a>
                                                    </li>
                                                    
                                                <% })%>
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- social_media_area end-->

                                </div>
                            </div>
                            <!-- contact_area_left end -->
                            <!-- contact_area_right start -->
                            <div class="col-md-6">
                                <div class="contact_area_right" data-aos="fade-left" data-aos-duration="1000">
                                    <form action="#">
                                        <div class="rirst_name_and_second_name_area form_item">
                                            <div class="first_name_area">
                                                <label>পুরো নাম</label>
                                                <input type="text" placeholder="নাম"  Value="<%= contact_message[0].full_name %>">
                                            </div>
                                            <div class="second_name_area">
                                                <label>্বিষয়</label>
                                                <input type="text" placeholder="নামের শিরোনাম" Value="<%= contact_message[0].email %>">
                                            </div>
                                        </div>
                                        <div class="email_area form_item">
                                            <label>ইমেইল</label>
                                            <input type="email" placeholder="abc@gmail.com" Value="<%= contact_message[0].email %>">
                                        </div>
                                        <div class="message_area form_item">
                                            <label>মেসেজ</label>
                                            <textarea name="#" id="#" cols="30" rows="10"
                                                placeholder="আপনার লেখা লিখুন . . .">
                                            <%= contact_message[0].message %></textarea>
                                        </div>
                                        <button class="submit_button"><i class="fa-regular fa-paper-plane"></i> Submit
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <!-- contact_area_right end -->
                        </div>
                    </div>
                    <!-- content_left_and_right_area end -->

                </div>
            </div>

        </div>


        <!-- scroll_button_area start -->
        <a href="#scroll_top" class="scroll-button">
            <span class="icon">
                <i class="fa-solid fa-angle-up"></i>
            </span>
        </a>
        <!-- scroll_button_area end -->
        <%- include('../layouts/frontend/footer.ejs') %>